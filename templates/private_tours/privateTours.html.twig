

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-4">
    {% for privateTour in privateTours %}
        <div class="my-4">
            <div class="card myCard h-100">
                <img src="{{ privateTour.image }}" class="card-img-top myCardImg" alt="{{ privateTour.name }}">
                <div class="card-body">
                  <h5 class="card-title">{{ privateTour.name }}</h5>
                  <p class="card-text cardText">{{ privateTour.description }}</p>
                </div>
                <div class="card-body">
                  <p>{{ privateTour.price }}</p>
                </div>
              </div>
        </div>
   {% endfor %}
</div>
